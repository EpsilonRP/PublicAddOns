		<Frames>
			<CheckButton parentKey="AllowOfficerToEditCheckButton" inherits="OptionsBaseCheckButtonTemplate" text="Allow Officers to Edit Map Settings &amp; Features">
				<Size x="20" y="20"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="18" y="-30"/>
				</Anchors>
				<ButtonText parentKey="Text">
					<Anchors>
   						<Anchor point="LEFT" relativePoint="RIGHT" />
					</Anchors>
				</ButtonText>
				<NormalFont style="GameFontHighlightSmall"/>
				<DisabledFont style="GameFontDisableSmall"/>

				<Scripts>
					<OnLoad>
						self.tooltipText = "If enabled, officers will be able to edit map settings and features." ..
							"\n\r|cffFF9999WARNING|r: Map Editing is not designed for multiple users to edit simultaneously." ..
							"\n\rEnabling this may lead to unexpected behavior if multiple officers are editing at the same time." ..
							"\n\rOnly enable this if you understand the risks &amp; communicate with your officer team the same."
					</OnLoad>
					<OnClick>
						if not C_Epsilon.IsOwner() then return end
						self:GetParent():SetOfficerAllowed( self:GetChecked() )
					</OnClick>
					<OnShow>
						self:SetEnabled( C_Epsilon.IsOwner() )

	<Frame name="EpsilonMapCartographerSettings" parent="WorldMapFrame" mixin="EpsilonMap_CartographerSettingsMixin" hidden="true" inherits="ButtonFrameTemplate,EpsilonMap_DevTextureIntrinsic_OnLoad_Template" frameStrata="DIALOG" enableMouse="true" movable="true" resizable="false" toplevel="true" clampedToScreen="true" dontSavePosition="true">

				<PushedTexture parentKey="Pushed" file="Interface\Addons\Epsilon_Map\Assets\UI\CartographerTabSelected"/>
				<NormalTexture parentKey="Normal" file="Interface\Addons\Epsilon_Map\Assets\UI\CartographerTab"/>

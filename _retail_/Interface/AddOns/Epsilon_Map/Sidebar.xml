			<Button parentKey="TogglePins" text="Pins" mixin="EpsilonMap_SidebarTabMixin">
				<Size y="26"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentHeader" relativePoint="BOTTOMLEFT" y="1"/>
					<Anchor point="TOPRIGHT" relativeTo="$parentHeader" relativePoint="BOTTOM" y="1"/>
				</Anchors>
				<ButtonText parentKey="Text"/>
				<DisabledTexture parentKey="Disabled" file="Interface\Addons\Epsilon_Map\Assets\UI\CartographerTabSelected"/>
				<PushedTexture parentKey="Pushed" file="Interface\Addons\Epsilon_Map\Assets\UI\CartographerTabSelected"/>
				<NormalTexture parentKey="Normal" file="Interface\Addons\Epsilon_Map\Assets\UI\CartographerTab"/>
				<NormalFont style="GameFontNormal"/>
				<DisabledFont style="GameFontHighlight"/>
				<Scripts>
					<OnLoad inherit="prepend" intrinsicOrder="precall">
						local textures = { self:GetRegions() }
						for k,v in ipairs(textures) do
							if v:IsObjectType("Texture") then
								local sizeH, sizeY = 256, 64
								local hCrop = 6 / sizeH
								local yCrop = 5 / sizeY
								v:SetTexCoord(0 + hCrop, 1 - hCrop, 0 + yCrop, 1 - yCrop)
							end
						end
					</OnLoad>
					<OnEnter method="OnEnter"/>
					<OnLeave method="OnLeave"/>
					<OnClick>
						self:GetParent():SetShowFeatures(false)
						MapTextureManager:ToggleEditMode(false)
					</OnClick>
				</Scripts>
			</Button>

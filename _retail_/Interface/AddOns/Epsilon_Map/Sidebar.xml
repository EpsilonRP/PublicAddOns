	<Button name="EpsilonMapSidebarFeatureListEntryTemplate" mixin="EpsilonMap_SidebarEntryMixin" registerForClicks="LeftButtonUp, RightButtonUp" hidden="true" virtual="true" inherits="EpsilonMap_DevTextureIntrinsic_OnLoad_Template">
		<Size x="258" y="24"/>
		<Layers>
			<Layer level="Background">
				<Texture parentKey="Background" file="Interface/Addons/Epsilon_Map/Assets/UI/CartographerEntryBackground">
					<TexCoords left="0.21" top="0.11" bottom="0.89" right="0.79"/>
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon">
					<Size x="24" y="24"/>
					<Anchors>
						<Anchor point="LEFT"/>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="IconMask">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon" relativePoint="TOPLEFT" x="2" y="-2"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon" relativePoint="BOTTOMRIGHT" x="-2" y="2"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
				<FontString inherits="GameFontDisableLarge" parentKey="FeatureCount">
					<Anchors>
						<Anchor point="RIGHT" x="-69" />
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="IconBg" file="Interface/Addons/Epsilon_Map/Assets/UI/CartographerEntryRingBackground.blp">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon" x="-3" y="3"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon" x="3" y="-3"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="IconBorder" file="Interface/Addons/Epsilon_Map/Assets/UI/CartographerEntryRing.blp">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon" x="-3" y="3"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon" x="3" y="-3"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Highlight" file="Interface/Addons/Epsilon_Map/Assets/UI/CartographerEntryHighlight.blp" hidden="true" setAllPoints="true">
					<TexCoords left="0.21" top="0.11" bottom="0.89" right="0.79"/>
				</Texture>
			</Layer>
		</Layers>
		<ButtonText parentKey="Text" wordwrap="false" justifyH="LEFT">
			<Anchors>
				<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.IconBorder"/>
				<Anchor point="RIGHT" x="-40"/>
			</Anchors>
		</ButtonText>
		<NormalFont style="GameFontNormalLarge"/>
		<HighlightFont style="GameFontHighlightLarge"/>
		<DisabledFont style="GameFontDisableLarge"/>

		<Frames>
			<Button parentKey="ExpandButton" hidden="true" inherits="EpsilonDropdownExpandButtonTemplate">
				<Size x="25" y="25"/>
				<Anchors>
					<Anchor point="RIGHT"/>
				</Anchors>
			</Button>
			<Button parentKey="VisibilityButton" inherits="IconButtonTemplate">
				<Size x="25" y="25"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeKey="$parent.ExpandButton"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="Icon">
							<Size x="40" y="20"/>
							<Anchors>
								<Anchor point="CENTER" x="-1"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
					local utils = LibStub("AceAddon-3.0"):GetAddon("Epsilon_Map")._Utils
					local vis_texture = utils.GetAddonAssetsPath("UI\\CartographerVisible")
					local hidden_texture = utils.GetAddonAssetsPath("UI\\CartographerInvisible")
					utils.AddTooltipToFrame(self, "Visibility", "Toggle the Feature / Layer's Visibility on the map")

					self.SetIconState = function(self, vis)
						local texture = vis and vis_texture or hidden_texture
						self.Icon:SetTexture(texture);
						self.HighlightTexture:SetTexture(texture);
						self.Icon:SetDesaturated(not vis)
					end
					self:SetIconState(true)
					</OnLoad>
				</Scripts>
				<HighlightTexture parentKey="HighlightTexture" alphaMode="ADD" alpha="0.4">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</HighlightTexture>
			</Button>
			<Button parentKey="LockButton" inherits="IconButtonTemplate">
				<Size x="20" y="25"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" relativeKey="$parent.VisibilityButton"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="Icon">
							<Size x="20" y="20"/>
							<Anchors>
								<Anchor point="CENTER" x="-1"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
					local utils = LibStub("AceAddon-3.0"):GetAddon("Epsilon_Map")._Utils
					local locked_texture = utils.GetAddonAssetsPath("UI\\CartographerLocked")
					local unlocked_texture = utils.GetAddonAssetsPath("UI\\CartographerUnlocked")
					utils.AddTooltipToFrame(self, "Lock", "Lock the Feature or Layer to prevent it from being selected or edited.")

					self.SetIconState = function(self, locked)
						local texture = locked and locked_texture or unlocked_texture
						self.Icon:SetTexture(texture);
						self.HighlightTexture:SetTexture(texture);
						self.Icon:SetDesaturated(not locked)
					end
					self:SetIconState(false)
					</OnLoad>
				</Scripts>
				<HighlightTexture parentKey="HighlightTexture" alphaMode="ADD" alpha="0.4" file="Interface\Addons\Epsilon_Map\Assets\UI\CartographerUnlocked">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</HighlightTexture>
			</Button>
		</Frames>
		<Scripts>
			<OnEnter>
			self.Highlight:Show()
			if MapTextureManager:GetSelected() == self.__mtm_instance then
				self.Highlight:SetAlpha(1)
			else
				self.Highlight:SetAlpha(1)
			end
			</OnEnter>
			<OnLeave>
			if self.__mtm_instance and (MapTextureManager:GetSelected() == self.__mtm_instance) then return end
			self.Highlight:Hide()
			</OnLeave>
			<OnHide>
			if self.__mtm_instance then
				self.__mtm_instance.__sidebar = nil
			end
			</OnHide>
		</Scripts>
	</Button>

